<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/mainImage"
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/img"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="PrasoonPatel"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/Designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="student interested in cp,ml,appdevelopment"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            android:visibility="visible"
            tools:ignore="HardcodedText,SpUsage,TextSizeCheck"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/skillsbutton"
                style="?android:buttonBarButtonStyle"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:text="Skills"
                android:textSize="18sp"
                tools:ignore="ButtonStyle,HardcodedText,VisualLineButtonSize,VisualLintButtonSize" />

            <Button
                android:id="@+id/experience"
                style="?android:buttonBarButtonStyle"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:text="Experience"
                android:textSize="18dp"
                tools:ignore="ButtonStyle,HardcodedText,SpUsage,TextSizeCheck,VisualLintButtonSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/educationbutton"
                style="?android:buttonBarButtonStyle"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:text="education"
                android:textSize="18sp"
                tools:ignore="ButtonStyle,HardcodedText,VisualLineButtonSize,VisualLintButtonSize" />

            <Button
                android:id="@+id/achievementbutton"
                style="?android:buttonBarButtonStyle"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:text="achievement"
                android:textSize="18dp"
                tools:ignore="ButtonStyle,HardcodedText,SpUsage,TextSizeCheck,VisualLintButtonSize" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>